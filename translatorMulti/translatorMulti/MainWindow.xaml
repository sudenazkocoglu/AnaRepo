<Window x:Class="MultiLangTranslator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Çoklu Dil Çeviri" Height="300" Width="400">

    <StackPanel Margin="10">
        <TextBox x:Name="txtInput" Height="60" TextWrapping="Wrap"/>

        <ComboBox x:Name="cmbLang" Margin="0,10,0,0">
            <ComboBoxItem Content="Türkçe → İngilizce"/>
            <ComboBoxItem Content="İngilizce → Türkçe"/>
            <ComboBoxItem Content="Türkçe → Almanca"/>
        </ComboBox>

        <Button Content="Çevir" Margin="0,10,0,0" Click="Translate_Click"/>

        <TextBox x:Name="txtOutput" Height="60" Margin="0,10,0,0"
                 TextWrapping="Wrap" IsReadOnly="True"/>
    </StackPanel>
</Window>